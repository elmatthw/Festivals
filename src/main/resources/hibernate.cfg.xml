<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name = "hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

        <property name = "hibernate.connection.url">
            jdbc:mysql://127.0.0.1/festivals_db
        </property>
        <property name = "hibernate.connection.username">
            root
        </property>
        <property name = "hibernate.connection.password">
            root
        </property>

        <mapping package="training.entity"/>
        <mapping class="training.entity.User"/>
        <mapping class="training.entity.PersonalInfo"/>
        <mapping class="training.entity.UserStatus"/>
        <mapping class="training.entity.Event"/>
        <mapping class="training.entity.Festival"/>
        <mapping class="training.entity.Performer"/>
        <mapping class="training.entity.Place"/>

    </session-factory>
</hibernate-configuration>